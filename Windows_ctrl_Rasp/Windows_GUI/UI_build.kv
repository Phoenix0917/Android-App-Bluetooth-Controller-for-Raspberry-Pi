#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import utils kivy.utils

WindowManager: # root rule (can be any widget)
    transition: FadeTransition()
    DevWindow: # class inside window manager
    UserWindow:
    BluetoothWindow: # class inside window manager

<UserWindow>:
    name: "userWindow"

    FloatLayout:
        size: root.width, root.height

        Image:
            source: 'Images_Used/background.jpg'
            allow_stretch: True
            keep_ratio: False

        Button:
            id: go_to_dev
            text: "Go to dev screen"
            pos_hint: {'right': 0.99, 'top': 0.99}
            font_size: 10
            size_hint: .15, .15
            on_press:
                root.manager.current = "devWindow" 

        Button:
            id: open_claw
            text: "Open Claw"
            pos_hint: {'right': 0.15, 'top': 0.65}
            font_size: 10
            size_hint: .125, .125
            on_press:
                root.open_claw()
            on_release:
                root.stop_claw() 

        Button:
            id: close_claw
            text: "Close Claw"
            pos_hint: {'right': 0.15, 'top': 0.51}
            font_size: 10
            size_hint: .125, .125
            on_press:
                root.close_claw()
            on_release:
                root.stop_claw() 

        ModifiedSlider:
            id: pwm_multiplier
            min: 0
            max: 100
            step: 1
            value: ((self.max - self.min) / 2) + self.min
            orientation: "vertical"
            pos_hint: {'x': 0.82, 'y': .05}
            size_hint: .1, .8 
            cursor_size: self.width / 1.5 , self.width / 1.5
            on_value: root.adjust_motor_voltage(*args)

        Label:
            pos_hint: {'center_x': .87, 'center_y': .05}
            text: "PWM Multiplier"
            

        Button:
            id: arrow_up
            angle: 90
            pos_hint: {'right': 0.5, 'top': 0.90}
            background_normal: ''
            background_color: '#266352'
            font_size: 10
            size_hint: .10, .10
            disabled: False
            on_press:
                root.test()
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 90
                    origin: self.center
            canvas.after:
                PopMatrix
            
            Image:
                source: 'Images_Used/Arrow.svg.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                width: self.parent.width * 0.9
                height: self.parent.height * 0.9
