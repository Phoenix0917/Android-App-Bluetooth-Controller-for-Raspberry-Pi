#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

WindowManager: # root rule (can be any widget)
    transition: FadeTransition()
    ControlWindow: # class inside window manager
    BluetoothWindow: # class inside window manager

<ControlWindow>: # class rule
    name: "control"

    FloatLayout:
        size: root.width, root.height

        Button:
            text: 'Bluetooth'
            pos_hint: {'x': 0.03, 'top': 0.97}
            color: .8,.9,0,1
            font_size: 10
            size_hint: .1, .1
            on_release:
                root.manager.current = "bluetooth"  
            
            Image:
                source: 'Images_Used/BT_Before.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                width: self.parent.width
                height: self.parent.height
                keep_ratio: False

        Button:
            text: 'Fake Button'
            pos_hint: {'right': 1, 'y': 0}
            color: .8,.9,0,1
            font_size: 32
            size_hint: .4, .3 


<BluetoothWindow>: # class rule
    name: "bluetooth"

    GridLayout:
        cols: 2
        
        GridLayout:
            rows: 5
            size: root.width, root.height

            Label:
                text: "Bluetooth Screen"
                size_hint: 1, 0.25
                font_size: self.width/20
            
            Button:
                text: "Scan Devices"
                font_size: self.width/20
                on_press: self.parent.parent.parent.scanDevice()

            Button:
                text: "Scan Services"
                font_size: self.width/20
                on_press: self.parent.parent.parent.scanService()
                background_color: (1, 0, 0, 1)

            GridLayout:
                rows: 4

                Label:
                    text: "Optional Service Search Criteria"
                    font_size: self.width/30

                GridLayout:
                    cols: 2

                    Label:
                        text: "Name"
                        size_hint: (0.3 , 1)
                        font_size: self.parent.width/30

                    TextInput:
                        id: Name
                        multiline: False

                GridLayout:
                    cols: 2

                    Label:
                        text: "Address"
                        size_hint: (0.3 , 1)
                        font_size: self.parent.width/30

                    TextInput:
                        id: Address
                        multiline: False


                GridLayout:
                    cols: 2
                    Button:
                        text: "+1 elem"
                        on_press: root.increment_elem()
                        
                    Button:
                        text: "-1 elem"
                        on_press: root.decrement_elem()

            Button:
                text: "Go Back"
                font_size: '15dp'
                on_release: app.root.current = "control"
        
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            id: scrollie

            GridLayout:
                width: self.parent.width
                id: grid1
                size_hint_x: 1
                size_hint_y: None
                cols: 1
                row_default_height: self.parent.height /4 
                row_force_default: True
