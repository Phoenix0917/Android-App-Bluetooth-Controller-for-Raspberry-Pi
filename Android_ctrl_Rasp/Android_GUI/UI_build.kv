            font_size: self.width / 6
            background_normal: ''
            background_color: '#266352'
            size_hint: .125, .125
            always_release: True
            on_press:
                root.control_claw('open')
            on_release:
                root.control_claw('stop') 

        Button:
            id: CloseClaw_ButtonObj
            text: "Close"
            pos_hint: {'right': 0.99, 'y': 0.05}
            font_size: self.width / 6
            background_normal: ''
            background_color: '#266352'
            size_hint: .125, .125
            always_release: True
            on_press:
                root.control_claw('close')
            on_release:
                root.control_claw('stop') 

