            font_size: self.width / 6
            background_normal: ''
            background_color: '#266352'
            size_hint: .125, .125
            always_release: True
            on_press:
                root.control_arm('raise')
            on_release:
                root.control_arm('stop')
           

        Button:
            id: LowerArm_ButtonObj
            text: "Lower"
            pos_hint: {'right': 0.85, 'y': 0.05}
            font_size: self.width / 6
            background_normal: ''
            background_color: '#266352'
            size_hint: .125, .125
            always_release: True
            on_press:
