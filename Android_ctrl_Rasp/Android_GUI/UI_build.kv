            font_size: root.width / 50
            halign: "center"
            background_normal: ''
            background_color: '#266352'
            size_hint: .125, .125
            on_press:
                root.detect_object()

        Button:
            text: "Start\n(Maze)"
            pos_hint: {'right': 0.695, 'y': 0.2}
            font_size: root.width / 50
            halign: "center"
            background_normal: ''
            background_color: '#266352'
            size_hint: .125, .125

